{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "jsx": "react",
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src"]
}
